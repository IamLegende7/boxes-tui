{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Export Jupyter Notebook",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/jupyter nbconvert ${file} --to python",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Export All Jupyter Notebooks",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/convert.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ]
}